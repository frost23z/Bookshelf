CREATE TABLE shelves (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL UNIQUE
);

getShelfById:
SELECT *
FROM shelves
WHERE id = :id;

getShelfByName:
SELECT id
FROM shelves
WHERE name = :name;

getAllShelves:
SELECT *
FROM shelves;

getLastInsertedShelfId:
SELECT last_insert_rowid();

insertShelf:
INSERT INTO shelves(name)
VALUES (:name);

updateShelf:
UPDATE shelves SET
    name = :name
WHERE id = :id;

deleteShelf:
DELETE FROM shelves
WHERE id = :id;